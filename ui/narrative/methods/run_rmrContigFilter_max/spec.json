{
    "ver": "0.0.1",
    "authors": [
        "rmr"
    ],
    "contact": "https://kbase.us/contact-us/",
    "categories": ["active"],
    "widgets": {
        "input": null,
        "output": "kbaseAssemblyView"
    },
    "parameters": [ 
        {
            "id": "assembly_input_ref",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "valid_ws_types": [ "KBaseGenomeAnnotations.Assembly", "KBaseGenomes.ContigSet" ]
            }
        },
        {
            "id": "min_length",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [ "" ],
            "field_type": "text",
            "text_options": {
                "validate_as": "int",
                "min_integer" : 0
            }
        },
        {
             "id": "max_length",
             "optional": false,
             "advanced": false,
             "allow_multiple": false,
             "default_values": [ "99999999" ],
             "field_type": "text",
             "text_options": {
                 "validate_as": "int",
                 "min_integer" : 0
             }
         },
		 {
            "id": "output_assembly_name",
            "optional": false,
            "advanced": false,
            "allow_multiple": false,
            "default_values": [""],
            "field_type": "text",
            "text_options": {
                "valid_ws_types" : [ "KBaseGenomeAnnotations.Assembly" ],
                "is_output_name":true
        	}
        }
    ],
    "behavior": {
        "service-mapping": {
            "url": "",
            "name":"rmrContigFilter",
            "method": "run_rmrContigFilter_max",
            "input_mapping": [
                {
                    "narrative_system_variable": "workspace",
                    "target_property": "output_workspace"
                },{
                    "input_parameter": "assembly_input_ref",
                    "target_property": "assembly_input_ref",
                    "target_type_transform": "resolved-ref"
                },{
                    "input_parameter": "min_length",
                    "target_property": "min_length"
                },
				{
					"input_parameter": "output_assembly_name",
					"target_property": "output_assembly_name"
				},
                {
                     "input_parameter": "max_length",
                     "target_property": "max_length"
                }
            ],
            "output_mapping": [
                {
                    "service_method_output_path": [0,"report_name"],
                    "target_property": "report_name"
                },
                {
                    "service_method_output_path": [0,"report_ref"],
                    "target_property": "report_ref"
                },
				{
					"input_parameter": "output_assembly_name",
					"target_property": "ws_id"
				},
				{
                    "narrative_system_variable": "workspace",
                    "target_property": "ws_name"
                }
            ]
        }
    },
    "job_id_output_field": "docker"
}
